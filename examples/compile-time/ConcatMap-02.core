root = f1 0

f1 x = concatMap f2 [y, y `add'Int` 1]
  where y = (x `add'Int` 1) * 2
f2 x = [x `add'Int` 1]

(++) xs ys = case xs of
    [] -> ys
    (z:zs) -> z : (zs ++ ys)

concatMap f xs = case xs of
    [] -> []
    (y:ys) -> f y ++ concatMap f ys

null xs = case xs of [] -> True; (y:ys) -> False

tests = [
    (null root, False)
  ]
